<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.tabs.parent.ParentDashboardFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ChildrenInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:hint="Выберите ребенка"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <AutoCompleteTextView
            android:id="@+id/actvChildrenToChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnChoosePeriod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="25dp"
        android:text="Задать период"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChildrenInputLayout" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeToRefreshParent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchStatus">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChildPlans"
        android:layout_width="0dp"
        android:layout_height="0dp"

        tools:listitem="@layout/rv_item_child_plan" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <Switch
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:enabled="false"
        android:text="Одобренные"
        app:layout_constraintStart_toStartOf="@+id/btnChoosePeriod"
        app:layout_constraintTop_toBottomOf="@+id/btnChoosePeriod" />

    <CheckBox
        android:id="@+id/cbAllChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Все"
        app:layout_constraintBottom_toBottomOf="@+id/switchStatus"
        app:layout_constraintEnd_toEndOf="@+id/btnChoosePeriod"
        app:layout_constraintTop_toTopOf="@+id/switchStatus" />

    <TextView
        android:id="@+id/tvDateRangeParent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnChoosePeriod"
        app:layout_constraintEnd_toEndOf="@+id/ChildrenInputLayout"
        app:layout_constraintStart_toStartOf="@+id/ChildrenInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/ChildrenInputLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>