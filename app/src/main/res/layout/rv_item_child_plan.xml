<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPlanCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/allerta"
        android:text="Кафе"
        android:textColor="@color/color3"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlanItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/allerta"
        android:text="McDonalds"
        android:textColor="@color/color2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvPlanCat"
        app:layout_constraintTop_toBottomOf="@+id/tvPlanCat" />

    <TextView
        android:id="@+id/tvPlanItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/allerta"
        android:text="250 р"
        android:textColor="@color/color2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPlanItemName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPlanItemName" />

    <Button
        android:id="@+id/btnConfirmPlanItem"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Одобрить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/tvPlanItemName"
        app:layout_constraintTop_toBottomOf="@+id/tvPlanItemName" />

    <TextView
        android:id="@+id/tvPlanItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28/03/2022"
        android:textColor="@color/color2"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/tvPlanItemPrice"
        app:layout_constraintTop_toTopOf="@+id/tvPlanCat" />

    <Button
        android:id="@+id/btnRejectPlanItem"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/color4"
        android:text="Отклонить"
        app:layout_constraintBottom_toBottomOf="@+id/btnConfirmPlanItem"
        app:layout_constraintEnd_toEndOf="@+id/tvPlanItemPrice"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnConfirmPlanItem"
        app:layout_constraintTop_toTopOf="@+id/btnConfirmPlanItem"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/imgvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPlanItemDate"
        app:layout_constraintEnd_toStartOf="@+id/tvPlanItemDate"
        app:layout_constraintTop_toTopOf="@+id/tvPlanItemDate"
        app:srcCompat="@drawable/ic_cancel" />
</androidx.constraintlayout.widget.ConstraintLayout>